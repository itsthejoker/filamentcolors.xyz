<div class="row">
  <div class="text-center {% if show_colormatch_extras %}mb-2{% else %}mb-3{% endif %} mx-auto">
    <div
      class="badge text-bg-secondary"
      data-bs-toggle="tooltip"
      data-bs-placement="top"
      data-container="body"
      data-animation="true"
      title="ΔE (CIE) Distance from the requested color.">
      ΔE: {{ value|floatformat:3 }}
    </div>
  </div>
</div>
